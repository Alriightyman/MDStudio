<Window x:Class="MDStudioPlus.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDStudioPlus.Views"
        mc:Ignorable="d"
        Title="About" Height="372" Width="293" Loaded="Window_Loaded"
        Foreground="{DynamicResource WindowForeground}" Background="{DynamicResource HeaderBackground}"
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10,10,10,10">
        <Image Source="/Views/MDStudio.png" Height="170" Width="170"/>
        <TextBlock Text="Author: Nicolas Hamel/Gouky"/>
        <TextBlock Text="Addition Code: Matt Phillips"/>
        <TextBlock Text="Rewrite: Alriightyman"/>
        <TextBlock Text="   Support: matt@bigevilcorporation.co.uk"/>
        <TextBlock Text=" https://github.com/Alriightyman/MDStudio"/>
        <TextBlock Text="In loving memory of Nicolas 'Gouky' Hamel"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Version: " Margin="0,20,0,0"/>
            <TextBlock x:Name="versionText" Margin="0,20,0,0" Text="" />
            <Button x:Name="okButton" Content="Ok" Width="75" Margin="100,20,0,0" Click="okButton_MouseLeftButtonDown"  />
        </StackPanel>
    </StackPanel>
</Window>
